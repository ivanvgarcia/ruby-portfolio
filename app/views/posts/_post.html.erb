<header>
  <h4>
    <%= post.title.upcase %>
  </h4>
</header>
<p><%= distance_of_time_in_words(post.created_at, Time.now) %> ago</p>
<p><%= post.body %></p>
<p>
  <%= link_to post.status, toggle_status_post_path(post), method: :post %>
</p>
<div><%= link_to 'Read More', post,  class: "btn" %></div>
<div>
  <%= link_to 'Edit', edit_post_path(post) if logged_in?(:site_admin) %>
</div>
<div>
  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?'
  } if logged_in?(:site_admin) %>
</div>
