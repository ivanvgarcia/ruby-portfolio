<header><%= post.title.upcase %></header>
<small><%= distance_of_time_in_words(post.created_at, Time.now) %> ago</small>
<p><%= post.body %></p>
<p>
  <%= link_to post.status, toggle_status_post_path(post), method: :post %>
</p>
<div><%= link_to 'Show', post %></div>
<div><%= link_to 'Edit', edit_post_path(post) %></div>
<div>
  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?'
  } %>
</div>
