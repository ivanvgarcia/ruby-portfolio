  <div class="row is-marginless">
    <div class="col s12 m2 grey lighten-5 posts-side-menu is-paddingless">
      <% @posts.each do |post| %>
        <%= render 'post_list', post: post %>
      <% end %>
    </div>
    <div id="show-post" class="col s12 m10">
      <div class="blog-title">
        <h1>My Blog</h1>
        <p>A blog focusing on programming</p>
      </div>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <div class="row">
        <div class="col m8">
          <%= render "show-post", post: @post %>
        </div>
        <div class="col m4 blog-bio">
            <%= render "blog-bio" %>
        </div>
      </div>
    </div>
  </div>
