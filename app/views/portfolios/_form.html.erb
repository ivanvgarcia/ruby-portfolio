<%= form_for(portfolio_item) do |form| %>

<div class="row">
  <div class="col s6">
    <div class="row">
      <div class="input-field col s12">
        <i class="material-icons prefix">text_fields</i>
        <%= form.label :title %> <%= form.text_field :title %>
      </div>
      <div class="input-field col s12">
        <i class="material-icons prefix">text_fields</i>
        <%= form.label :subtitle %> <%= form.text_field :subtitle %>
      </div>
    </div>
  </div>
  <div class="input-field col s6">
    <i class="material-icons prefix">short_text</i>
    <%= form.label :body %> <%= form.text_area :body, class:
    "materialize-textarea" %>
  </div>
  <div class="input-field col s6 ">
    <i class="material-icons prefix">photo</i>
    <label class="btn upload">
      Upload Main Photo <%= form.file_field :main_image, class: 'hide' %>
    </label>
  </div>
  <div class="input-field col s6 margin-top">
    <i class="material-icons prefix">photo</i>
    <label class="btn upload">
      Upload Thumbnail <%= form.file_field :thumb_image, class: 'hide' %>
    </label>
  </div>
</div>

<div class="row">
  <div class="h7">Technologies Used</div>
  <%= form.fields_for :technologies do |technology_form| %>
  <div class="input-field col s6">
    <i class="material-icons prefix">whatshot</i>
    <%= technology_form.label :name %> <%= technology_form.text_field :name %>
  </div>
  <% end %>
</div>

<div class="actions">
  <%= form.submit class: "btn indigo darken-3" %>
</div>
<% end %>
